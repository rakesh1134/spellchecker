<Window x:Class="spellchecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:spellchecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel>
        <Button Click="Button_Click" Height="30">Read File</Button>
        <TextBlock Height="30" >Type a word</TextBlock>
        <TextBox Height="30" x:Name="txtinput"></TextBox>
        <Button Height="30" Click="Button_Click_1">Check the word</Button>
        <TextBlock Height="30">suggested words</TextBlock>
        <TextBox x:Name ="txtoutput" Height="295" Margin="0,0,0.333,0"></TextBox>
    </StackPanel>
</Window>
